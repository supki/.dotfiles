[core]
	excludesfile = ~/.gitignore
	editor = vim
	whitespace = blank-at-eof,blank-at-eol,space-before-tab,tab-in-indent
[user]
	name = Matvey Aksenov
	email = matvey.aksenov@gmail.com
[color]
	ui = true
[merge]
	tool = gvimdiff
	conflictstyle = diff3
[diff]
	renames = true
	algorithm = patience
[alias]
	co = checkout
	br = branch -v
	ci = commit
	st = status
	unstage = reset HEAD --
	unci = reset --soft HEAD~1
	wipe = reset --hard HEAD --
	lo = log --stat
	lg = log --patch-with-stat
	prbs = pull --rebase
	rbs = rebase --preserve-merges
	d = diff
	df = diff --stat
	dl = diff HEAD~1
	ds = diff --staged
[push]
	default = current
[rerere]
	enabled = true
[rebase]
	autosquash = on
