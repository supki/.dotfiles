[core]
	excludesfile = ~/.gitignore
	editor = vim
	whitespace = blank-at-eof,blank-at-eol,space-before-tab,tab-in-indent
[user]
	name = Matvey Aksenov
	email = matvey.aksenov@gmail.com
[color]
	ui = true
[merge]
	tool = gvimdiff
	conflictstyle = diff3
[diff]
	renames = true
	algorithm = patience
[alias]
	co = checkout
	br = branch -v
	sup = "!yo() { git branch "$2" --set-upstream "$1/$2"; }; yo"
	releasey = "!f() { git log `git describe --tags --abbrev=0`..HEAD --oneline; }; f"
	ci = commit
	ca = commit -a
	st = status
	s = status
	unstage = reset HEAD --
	unci = reset --soft HEAD~1
	wipe = reset --hard HEAD --
	lg = log --patch-with-stat
	lo = log --stat
	lol = log --oneline --decorate
	ll = log --patch-with-stat HEAD~1..HEAD
	pu = push
	puo = push origin
	p = pull
	prbs = pull --rebase
	rbs = rebase --preserve-merges
	ms = merge --squash
	d = diff
	di = diff --ignore-space-change
	df = diff --stat
	dl = diff HEAD~1..HEAD
	ds = diff --staged
	dsi = diff --staged --ignore-space-change
	dcw = diff --color-words
	dni = diff --no-index
	ru = remote update
	g = grep
	cur = "!f() { git tag | sort --version-sort --reverse | head -n 1; }; f"
[push]
	default = current
[rerere]
	enabled = true
[rebase]
	autosquash = on
