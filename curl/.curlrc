# There's no way this config file breaks some obscure shit script
# that for some reason decides to use Zsh, right?

# This should not touch Bash scripts at all as `~/.config/curl/.curlrc` is not in
# any of the default config paths, according to `https://everything.curl.dev/cmdline/configfile`,
# and we do not set `$CURL_HOME` for Bash.

# fake user agent
user-agent = "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/102.0.0.0 Safari/537.36"

# follow redirects
location

# preserve referer when following redirects
referer = ";auto"

# request compressed data
compressed

# exit with non-zero exit code on non 2XX responses
fail

# compact upload/download ui
progress-bar
