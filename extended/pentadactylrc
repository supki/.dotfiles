"1.0rc1

loadplugins '\.(js|penta)$'
group user

set complete=location,bookmark,suggestion

set guioptions=C
set defsearch=google
set showtabline=multitab
set newtab+=help
set hlfind

set hintkeys=asdfghjkl;
:highlight -a Hint text-transform: uppercase;

nnoremap : ;
nnoremap ; :
nnoremap j 5j
nnoremap k 5k
nnoremap h 5h
nnoremap l 5l
nmap <A-Tab> <C-6>
nmap <Space> <C-D>
nmap <S-Space> <C-U>
nmap <C-S-p> ;tabmove -1<CR>
nmap <C-S-n> ;tabmove +1<CR>

javascript <<EOF
	dactyl.toggleStatusLine = function () {
		if (options.guioptions.indexOf("s") != -1)
			dactyl.execute(":set guioptions-=s");
		else
			dactyl.execute(":set guioptions+=s");
	};
EOF

set mapleader=","
nnoremap <leader>s -js dactyl.toggleStatusLine();
nnoremap <leader>z -js window.content.document.toggleImageSize();
nnoremap <leader>d :dialog downloads<CR>

style -group=user -name=black_new_tab chrome://* xul|browser { background-color: black; }

" vim: set ft=pentadactyl:
