"1.0rc1

loadplugins '\.(js|penta)$'
group user

set complete=bookmark,location,search,file

set guioptions=Cs
set defsearch=google
set showtabline=multitab
set newtab+=help
set hlfind

set hintkeys=asdfghjkl;
:highlight -a Hint text-transform: uppercase;

nmap -builtin : ;
nmap -builtin ; :
nmap -builtin j 5j
nmap -builtin k 5k
nmap -builtin h 5h
nmap -builtin l 5l
nmap <A-Tab> <C-6>
nmap <Space> <C-D>
nmap <S-Space> <C-U>
nmap d <C-D>
nmap u <C-U>
nmap <C-S-p> ;tabmove -1<CR>
nmap <C-S-n> ;tabmove +1<CR>
nmap ge <C-S-e> " panorama view
nmap x -js gBrowser.removeCurrentTab()
nmap X -js undoCloseTab()

javascript <<EOF
	dactyl.toggleStatusLine = function () {
		if (options.guioptions.indexOf("s") != -1)
			dactyl.execute(":set guioptions-=s");
		else
			dactyl.execute(":set guioptions+=s");
	};
EOF

javascript <<EOF
	dactyl.togglePinned = function () {
		if (gBrowser.mCurrentTab.pinned)
			dactyl.execute(":unpin");
		else
			dactyl.execute(":pin");
	};
EOF

map , <leader>
nmap -builtin <leader>s -js dactyl.toggleStatusLine();
nmap -builtin <leader>p -js dactyl.togglePinned();
nmap -builtin <leader>z -js window.content.document.toggleImageSize();
nmap -builtin <leader>d :dialog downloads<CR>

style -group=user -name=black_new_tab chrome://* xul|browser { background-color: black; }

" vim: set ft=pentadactyl:
