[core]
	excludesfile = ~/.gitignore
	editor = vim
	whitespace = blank-at-eof,blank-at-eol,space-before-tab,tab-in-indent
[user]
	name = Matvey Aksenov
	email = matvey.aksenov@gmail.com
[color]
	ui = true
[merge]
	tool = gvimdiff
	conflictstyle = diff3
[diff]
	renames = true
	algorithm = patience
[alias]
	br = branch -v
	ci = commit
	cl = clone
	co = checkout
	cp = cherry-pick
	d = diff
	di = diff --ignore-space-change
	dl = show HEAD
	dli = show HEAD --ignore-space-change
	ds = diff --staged
	dsi = diff --staged --ignore-space-change
	dw = diff --color-words
	g = grep
	l = log --oneline --decorate
	l4 = log -4
	ms = merge --squash
	mf = merge --ff-only
	p = pull
	prbs = pull --rebase
	pu = push
	rbs = rebase
	ru = remote update
	s = status --short --branch
	unci = reset --soft HEAD~1
	wipe = reset --hard HEAD --
[push]
	default = current
[rerere]
	enabled = true
[rebase]
	autosquash = on
[pager]
	log = diff-so-fancy | less
	show = diff-so-fancy | less
	diff = diff-so-fancy | less
[init]
	defaultBranch = main
[includeIf "gitdir:~/w/"]
  path = ~/w/gitconfig
